# Beam Stream Configuration

# Server binding address (format: host:port)
BIND_ADDRESS=0.0.0.0:8000

# Server URL
SERVER_URL=http://localhost:8000

# Logging configuration
# Possible values: trace, debug, info, warn, error
RUST_LOG=beam_stream=info,tower_http=debug,axum=debug

# Database connection URL
DATABASE_URL=postgres://beam:password@localhost:5432/beam

# Storage paths
VIDEO_DIR=./videos
CACHE_DIR=./cache

# Authentication
# Secret key for signing JWTs. MUST be at least 32 characters long.
JWT_SECRET=change_me_to_a_secure_random_string_at_least_32_chars_long

# Session Store (Redis/Valkey)
REDIS_URL=redis://localhost:6379
